.footer__title
  display: flex
  justify-content: space-between
  &__logo
    font-size: 26px
    line-height: 32px
    letter-spacing: 0.325px
    color $or
  &__list
    display: flex
    &__item
      margin-right: 16px
      &:last-child
        margin: 0
.footer__main
  display: flex
  justify-content space-between
  margin-top: 96px
  &__help__title
    font-size: 15px
    line-height: 18px
    letter-spacing: 0.2px
    color $white
  &__help__list
    padding: 0
    margin-top: 25px
    &__item
      margin-top: 16px
      & > a
        font-size: 15px
        line-height: 20px
        letter-spacing: 0.2px
        color $white
.footer__footer
  margin-top: 120px
  &__list
    display: flex
    justify-content: center
    padding: 0
    &__item
      margin-left: 34px
      & > p
        font-size: 14px
        line-height: 20px
        letter-spacing: 0.2px
        color #8D8D8D