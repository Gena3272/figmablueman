.hero
    position relative
    height 100vh
    &__img
        position absolute
        left 52%
        bottom 0
        width 48%
        
    &__col
        width: 50%
        height 100%
        padding-top 250px

        &__title
            font-size: 46px;
            line-height: 50px;
            color: $colorTextTitle
            margin 0

        &__cop
            font-size: 20px;
            line-height: 22px;
            color: $colorP
            margin-top 19px

        &__block-btn
            margin-top 40px

            & > button 
                width: 157px;
                height: 46px;
                border-radius: 3px;
                border: none
                font-weight: 500;
                font-size: 12px;
                line-height: 20px;
                text-align: center;
                letter-spacing: 2px;
                text-transform: uppercase;
                transition: .5s


            & > button:first-child
                background $or
                color: $white
                box-shadow: -11.09px 18.13px 36.6483px rgba(242, 153, 74, 0.23)

                &:hover
                    color $or
                    background-color transparent
                    border: 1px solid $or

            & > button:last-child
                margin-left 20px
                color: $or
                border: 1px solid $or
                background-color transparent

                &:hover
                    background-color $or
                    color: $white
        &__footer
            display: flex 
            justify-content start
            margin-top 60px

            &__play
                width 250px
                height 100px
                background-color: $blue-2
                text-align: center
                border-radius: 5px;
                & > img 
                    padding 25px
            &__text
                margin-left 20px
                &__title
                    margin-bottom 0
                    font-size: 16px;
                    line-height: 22px;
                    color: $colorP
                &__cop
                    
                    padding 0
                    color: #b5b5b5
                    font-size: 14px;
                    line-height: 22px;

        

                 
                
        
